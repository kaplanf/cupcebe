<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The Main frame -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomContainer"></FrameLayout>

        <RelativeLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#11aed4"
            android:padding="0dp">


            <ImageView
                android:id="@+id/bottomMenuHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:src="@drawable/tab_bar_home" />

            <ImageView
                android:id="@+id/bottomMenuSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/bottomMenuHome"
                android:padding="8dp"
                android:src="@drawable/tab_bar_search" />

            <ImageView
                android:id="@+id/bottomMenuTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/bottomMenuSearch"
                android:padding="8dp"
                android:src="@drawable/tab_bar_etiket" />

            <ImageView
                android:id="@+id/bottomMenuWish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/bottomMenuTag"
                android:padding="8dp"
                android:src="@drawable/tab_bar_wish" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/bottomMenuCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/tab_ikon" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <com.nomad.cuppcebe.components.RightDrawerLayout_
            android:id="@+id/rightDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.nomad.cuppcebe.components.RightDrawerLayout_>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

